{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "pretty": true,
    "outDir": "lib",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": []
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "lib",
    "__mocks__"
  ]
}
